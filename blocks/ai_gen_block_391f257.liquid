        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.show_section_3 %}
      <div class="ai-return-policy-section-{{ ai_gen_id }}">
        {% if block.settings.section_3_title != blank %}
          <h2 class="ai-return-policy-section-title-{{ ai_gen_id }}">{{ block.settings.section_3_title }}</h2>
        {% endif %}
        {% if block.settings.section_3_content != blank %}
          <div class="ai-return-policy-section-content-{{ ai_gen_id }}">
            {{ block.settings.section_3_content }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.show_section_4 %}
      <div class="ai-return-policy-section-{{ ai_gen_id }}">
        {% if block.settings.section_4_title != blank %}
          <h2 class="ai-return-policy-section-title-{{ ai_gen_id }}">{{ block.settings.section_4_title }}</h2>
        {% endif %}
        {% if block.settings.section_4_content != blank %}
          <div class="ai-return-policy-section-content-{{ ai_gen_id }}">
            {{ block.settings.section_4_content }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.show_section_5 %}
      <div class="ai-return-policy-section-{{ ai_gen_id }}">
        {% if block.settings.section_5_title != blank %}
          <h2 class="ai-return-policy-section-title-{{ ai_gen_id }}">{{ block.settings.section_5_title }}</h2>
        {% endif %}
        {% if block.settings.section_5_content != blank %}
          <div class="ai-return-policy-section-content-{{ ai_gen_id }}">
            {{ block.settings.section_5_content }}
          </div>
        {% endif %}

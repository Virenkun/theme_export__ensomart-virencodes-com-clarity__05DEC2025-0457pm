{% doc %}
  @prompt
    A return policy page
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-return-policy-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
  }

  .ai-return-policy-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-return-policy-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.subtitle_spacing }}px;
  }

  .ai-return-policy-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-return-policy-intro-{{ ai_gen_id }} {
    font-size: {{ block.settings.intro_size }}px;
    line-height: 1.6;
    margin-bottom: {{ block.settings.section_spacing }}px;
    text-align: {{ block.settings.intro_alignment }};
  }

  .ai-return-policy-sections-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.section_spacing }}px;
  }

  .ai-return-policy-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.section_background }};
    border-radius: {{ block.settings.section_border_radius }}px;
    border: {{ block.settings.section_border_width }}px solid {{ block.settings.section_border_color }};
  }

  .ai-return-policy-section-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.section_title_size }}px;
    color: {{ block.settings.section_title_color }};
    margin: 0 0 {{ block.settings.section_content_spacing }}px;
  }

  .ai-return-policy-section-content-{{ ai_gen_id }} {
    font-size: {{ block.settings.content_size }}px;
    line-height: 1.6;
  }

  .ai-return-policy-section-content-{{ ai_gen_id }} p {
    margin: 0 0 12px;
  }

  .ai-return-policy-section-content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-return-policy-section-content-{{ ai_gen_id }} ul,
  .ai-return-policy-section-content-{{ ai_gen_id }} ol {
    margin: 0 0 12px;
    padding-left: 24px;
  }

  .ai-return-policy-section-content-{{ ai_gen_id }} li {
    margin-bottom: 8px;
  }

  .ai-return-policy-section-content-{{ ai_gen_id }} li:last-child {
    margin-bottom: 0;
  }

  .ai-return-policy-section-content-{{ ai_gen_id }} strong {
    color: {{ block.settings.section_title_color }};
  }

  .ai-return-policy-cta-{{ ai_gen_id }} {
    margin-top: {{ block.settings.section_spacing }}px;
    text-align: {{ block.settings.cta_alignment }};
  }

  .ai-return-policy-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    transition: background-color 0.3s ease;
  }

  .ai-return-policy-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-return-policy-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-return-policy-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-return-policy-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.85 }}px;
    }

    .ai-return-policy-section-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.section_title_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<div class="ai-return-policy-{{ ai_gen_id }}" {{ block.shopify_attributes }}>

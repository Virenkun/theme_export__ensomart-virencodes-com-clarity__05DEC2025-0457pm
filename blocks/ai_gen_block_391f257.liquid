    {% endif %}
  </div>

  {% if block.settings.show_cta %}
    <div class="ai-return-policy-cta-{{ ai_gen_id }}">
      <a href="{{ block.settings.cta_link }}" class="ai-return-policy-button-{{ ai_gen_id }}">
        {{ block.settings.cta_text }}

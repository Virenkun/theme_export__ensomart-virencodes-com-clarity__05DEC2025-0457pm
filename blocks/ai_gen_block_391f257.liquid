        {% if block.settings.section_2_title != blank %}
          <h2 class="ai-return-policy-section-title-{{ ai_gen_id }}">{{ block.settings.section_2_title }}</h2>
        {% endif %}
        {% if block.settings.section_2_content != blank %}
          <div class="ai-return-policy-section-content-{{ ai_gen_id }}">
            {{ block.settings.section_2_content }}
